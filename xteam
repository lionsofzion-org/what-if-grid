      position: relative;
    }
    .tab-content {
      display: none;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease, transform 0.5s ease;
      width: 100%;
      margin-bottom: 2rem;
    }
    .tab-content.show {
      display: block;
      opacity: 1;
      transform: translateY(0);
    }
    
    /* Search bar */
    .search-container {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-bottom: 1rem;
    }
    .search-container input {
      width: 90%;
      max-width: 500px;
      padding: 0.5rem;
      border-radius: 20px;
      border: 1px solid #ccc;
      outline: none;
      font-size: 1rem;
    }
    
    /* Posts container */
    .posts-container {
      background: var(--translucent-gold);
      padding: 1.5rem;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(255, 204, 0, 0.2);
      position: relative;
      animation: fadeIn 0.5s ease forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .posts-container h2 {
      text-align: center;
      font-size: 1.2rem;
      margin-bottom: 1rem;
      color: var(--accent-gold);
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
    }
    
    /* Post block */
    .post-block {
      background: #111;
