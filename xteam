      transform: scale(1.05);
      box-shadow: 0 3px 8px rgba(255, 204, 0, 0.4);
    }
    .share-button {
      background: linear-gradient(135deg, var(--accent-lightblue), var(--accent-blue));
      color: #000;
    }
    .share-button:hover {
      transform: scale(1.05);
      box-shadow: 0 3px 8px rgba(51, 153, 255, 0.4);
    }
    
    /* Sentinel for lazy loading */
    .sentinel {
      height: 1px;
    }
    
    /* Footer */
    footer {
      background: #111;
